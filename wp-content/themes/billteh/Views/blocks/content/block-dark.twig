<div class="block-dark {{ class }}" style="background-image: url('{{ background.url }}')">
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-lg-12">
                <div class="wrapper">
                    <div class="content">
                        {% if task %}
                            <ul>
                                <li><h3>{{ taskTitle }}</h3></li>
                                <li><p>{{ task }}</p></li>
                            </ul>
                            <ul>
                                <li><h5>{{ wishesTitle }}</h5></li>
                                <li><p>{{ wishes }}</p></li>
                            </ul>
                        {% elseif review %}
                            <ul>
                                <li><h3>{{ review.title }}</h3></li>
                                <li><p>{{ review.content }}</p></li>
                            </ul>
                        {% endif %}
                    </div>
                    {% if video %}
                        <div class="icon">
                            <img src="{{ get_field('youtubeBlock_icon','options_post-portfolio').url }}" alt="{{ get_field('youtubeBlock_icon','options_post-portfolio').alt }}">
                        </div>
                        <div class="btn--wrapper flex_row justify_start">
                            <a  class="btn btn--opacity btn--borderWhite btn--video" data-toggle="modal" data-target="#{{ videoSlug }}">
                                <i class="far fa-play-circle"></i>
                                смотреть видео
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% if video %}
    <section class="modal modal_hide modal_data fade" id="{{ videoSlug }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="modal_wrapper">
                    <iframe width="100%" height="315" src="{{ video }}?rel=0&showinfo=0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </section>

{% endif %}