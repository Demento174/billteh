<section class="mainTitle-twoColumns flex_row  {{ class }}">
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-lg-6">
                <div class="left flex_column align_end">
                    <div class="content">
                        {% if title %}
                            {% include './blocks/title/h1.twig' with { title:title } %}
                        {% endif %}
                        {% if list %}
                            <ul class="list">
                                {% for item in list %}
                                    <li>
                                        {% if item.title %}
                                            <span class="li-title">
                                {{ item.title }}
                            </span>
                                        {% endif %}
                                        {% if item.description %}
                                            <span class="li-description">
                              {{ item.description }}
                            </span>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>

                </div>
            </div>
            <div class="right">
                {% if img %}
                    <div class="img">
                        <img src="{{ img.url }}" alt="{{ img.alt }}">
                    </div>
                {% endif %}
            </div>
        </div>
    </div>


</section>